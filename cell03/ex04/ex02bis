  <body>
    <form class="calc-container" id="calcForm" autocomplete="off">
      <input type="text" id="left" placeholder="Left operand">
      <select id="operator">
        <option value="+">+</option>
        <option value="-">-</option>
        <option value="*">*</option>
        <option value="/">/</option>
        <option value="%">%</option>
      </select>
      <input type="text" id="right" placeholder="Right operand">
      <input type="submit" value="Try me!">
    </form>
    <script>
      function isPositiveInteger(str) {
        return /^\d+$/.test(str);
      }
      $(function() {
        $('#calcForm').submit(function(e) {
          e.preventDefault();
          var left = $('#left').val().trim();
          var right = $('#right').val().trim();
          var op = $('#operator').val();

          if (!isPositiveInteger(left) || !isPositiveInteger(right)) {
            alert('Error :(');
            return;
          }
          var a = parseInt(left, 10);
          var b = parseInt(right, 10);

          if ((op === '/' || op === '%') && b === 0) {
            alert("It's over 9000!");
            console.log("It's over 9000!");
            return;
          }
          var result;
          switch(op) {
            case '+': result = a + b; break;
            case '-': result = a - b; break;
            case '*': result = a * b; break;
            case '/': result = a / b; break;
            case '%': result = a % b; break;
          }
          alert(result);
          console.log(result);
        });

        setInterval(function() {
          alert('Please, use me...');
        }, 30000);
      });
    </script>
  </body>
